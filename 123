#include<stdio.h>
int main()
{
	int a,x,y,z,t,m,n;
	printf("请输入不多于五位的正整数:");
    scanf("%d",&a);
	if(a<10)
		{printf("输入的位数:1\n");
	    x=a;
        printf("每一个数为：%d\n",x);
		z=a;
		printf("逆顺序：%d\n",z);}
	if(a>=10&&a<100)
		{printf("输入的位数:2\n");
	    x=a%10;//个位
		y=(a-x)/10;//十位
		printf("每一个数为：%d,%d\n",x,y);
		z=x*10+y;
		printf("逆顺序：%d\n",z);}
	if(a>=100&&a<1000)
		{printf("输入的位数:3\n");
	    x=a/100;//百位
		y=a%100/10;//十位
		t=a%100%10;//个位
		printf("每一个数为：%d,%d,%d\n",x,y,t);
		z=t*100+y*10+x;
		printf("逆顺序：%d\n",z);}
	if(a>=1000&&a<10000)
		{printf("输入的位数:4\n");
	    x=a/1000;//千位
		y=a%1000/100;//百位
		z=a%1000%100/10;//十位
		t=a%1000%100%10;//个位
		printf("每一个数为：%d,%d,%d,%d\n",x,y,z,t);
		m=t*1000+z*100+y*10+x;
		printf("逆顺序：%d\n",m);}
	if(a>=10000&&a<100000)
		{printf("输入的位数:5\n");
		x=a/10000;//万位
		y=a%10000/1000;//千位
		z=a%10000%1000/100;//百位
	    t=a%10000%1000%100/10;//十位
		m=a%10000%1000%100%10;//个位
		printf("每一个数为：%d,%d,%d,%d，%d\n",x,y,z,t,m);
	    n=m*10000+t*1000+z*100+y*10+x;
		printf("逆顺序：%d\n",n);}
		return 0;
}
